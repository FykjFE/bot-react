{
  "compilerOptions": {
    "target": "ES2020",
    "module": "umd",
    "allowJs": true,
    "jsx": "react",
    "declaration": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "component": [
        "component/*"
      ]
    },
    "types": [
      "node",
      "webpack-env"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "config",
    "commitlint.config.js"
  ]
}
